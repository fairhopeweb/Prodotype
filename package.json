{
  "name": "prodotype",
  "version": "1.0.20",
  "description": "",
  "main": "index.js",
  "author": "lexoyo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/silexlabs/Prodotype.git"
  },
  "engines": {
    "node": "8.10.x",
    "npm": "5.6.x"
  },
  "scripts": {
    "prepare": "npm run build:editor:debug",
    "prepublishOnly": "git clean -n && read -p \"Continue? (CTRL+C to abort)?\" && git clean -fd && npm run build:editor:release",
    "build": "npm run build:editor:release && npm run build:templates",
    "build:debug": "npm run build:editor:debug && npm run build:templates",
    "watch": "nodemon --watch 'src' --exec 'npm run build'",
    "watch:test": "nodemon --watch 'src' --exec 'npm run build:debug && npm test'",
    "reload": "reload -v -b -d pub/ -p 8080",
    "build:editor:release": "browserify src/Prodotype.js -o pub/prodotype.js -t [ babelify ] && npm run cp-ejs",
    "build:editor:debug": "browserify src/Prodotype.js -o pub/prodotype.js -t [ babelify --sourceMap ] -d && npm run cp-ejs",
    "cp-ejs": "cp `node_modules ejs`/ejs/ejs.min.js pub/ejs.min.js",
    "build:templates": "bin/prodotype sample/ pub/sample",
    "start": "http-server .",
    "test": "jest"
  },
  "bin": {
    "prodotype": "bin/prodotype"
  },
  "dependencies": {
    "ejs": "^2.6.1",
    "js-yaml": "^3.13.1",
    "node_modules-path": "*",
    "object-path": "^0.11.4"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "babel-polyfill": "^6.26.0",
    "babelify": "^10.0.0",
    "brace": "^0.11.1",
    "browserify": "^16.2.3",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "react": "^16.8.6",
    "react-ace": "^6.5.0",
    "react-dom": "^16.8.6",
    "react-tap-event-plugin": "^3.0.3",
    "react-test-renderer": "^16.8.6",
    "reload": "^3.0.1"
  }
}
